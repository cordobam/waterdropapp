<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F8E9"> <TextView
    android:id="@+id/tvTituloCargas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cargas Varias"
    android:padding="20dp"
    android:textSize="22sp"
    android:textStyle="bold"
    android:background="#C8E6C9"
    android:textColor="#1B5E20"
    android:elevation="4dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutCargas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#4CAF50"
        app:tabTextColor="#666"
        app:tabSelectedTextColor="#2E7D32"
        app:tabIndicatorFullWidth="false"
        app:tabMode="fixed"
        android:background="#C8E6C9" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerCarga"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>