<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F8E9"
    android:paddingBottom="80dp">

    <!-- HEADER -->
    <TextView
        android:id="@+id/tvPromedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŒ¿ Regar Plantas"
        android:padding="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#C8E6C9"
        android:textColor="#1B5E20"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#4CAF50"
        app:tabTextColor="#666"
        app:tabSelectedTextColor="#2E7D32"
        app:tabIndicatorFullWidth="false">

        <com.google.android.material.tabs.TabItem
            android:text="Plantas Individuales" />

        <com.google.android.material.tabs.TabItem
            android:text="Grupos de Plantas" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlantas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>